{
    "name": "ait/erp",
    "type": "cloud-erp",
    "description": "AIT-TECH-ERP.",
    "keywords": [
        "ait",
        "erp"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.2.0",
        "arielmejiadev/larapex-charts": "^2.1",
        "arifpay/arifpay": "^2.1",
        "barryvdh/laravel-dompdf": "^2.1",
        "dyrynda/laravel-cascade-soft-deletes": "^4.4",
        "fakerphp/faker": "^1.23",
        "guzzlehttp/guzzle": "^7.8",
        "haruncpi/laravel-id-generator": "^1.1",
        "larabug/larabug": "dev-master",
        "laravel-notification-channels/webpush": "^8.0",
        "laravel/framework": "^11.6",
        "laravel/sanctum": "^4.0",
        "laravel/tinker": "^2.9",
        "laravel/ui": "^4.5",
        "livewire/livewire": "^3.4",
        "maatwebsite/excel": "^3.1",
        "masbug/flysystem-google-drive-ext": "^2.3",
        "spatie/laravel-activitylog": "^4.8",
        "spatie/laravel-backup": "^8.8",
        "spatie/laravel-permission": "^6.7",
        "yajra/laravel-datatables": "^11.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.13",
        "laravel/sail": "^1.29",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.1",
        "phpunit/phpunit": "^10.0",
        "spatie/laravel-ignition": "^2.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "prefer-stable": true
}
